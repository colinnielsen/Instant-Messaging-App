{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "baseui"
    ],
    "rules": {
        "baseui/deprecated-theme-api": "warn",
        "baseui/deprecated-component-api": "warn",
        "baseui/no-deep-imports": "warn"
      }
    }